<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="countdownview">
        <attr name="radius" format="dimension" />
        <attr name="paintWidth" format="dimension" />
        <attr name="paintColor" format="color" />

        <attr name="testIn" format="string" />
        <attr name="testTimeSize" format="dimension" />
        <attr name="testSize" format="dimension" />
        <attr name="paintInColor" format="color" />
        <attr name="testInColor" format="color" />
    </declare-styleable>

    <!-- TEditText -->
    <declare-styleable name="TEditText">
        <attr name="object_foreground_color" format="color" />
        <attr name="object_background_color" format="color" />
    </declare-styleable>

    <!--底部导航栏-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>
    <!--顶部菜单栏-->
    <declare-styleable name="customTab">
        <attr name="hasBottomLine" format="boolean" />
        <attr name="average" format="boolean" />
        <attr name="itemmarginright" format="dimension" />

        <attr name="bottomlinewidth" format="dimension" />
        <attr name="bottomlineheight" format="dimension" />
        <attr name="bottomlinecolor" format="reference" />
    </declare-styleable>


    <!--电池-->
    <declare-styleable name="batteryView">
        <attr name="top2centerdistance" format="dimension" />

        <attr name="batteryTopColor" format="color" />
        <attr name="batteryTopWidth" format="dimension" />
        <attr name="batteryTopLineWidth" format="dimension" />
        <attr name="batteryTopLineHeight" format="dimension" />
        <attr name="batteryTopLineArc" format="dimension" />

        <attr name="centerBodyColor" format="color" />
        <attr name="centerBodySideWidth" format="dimension" />
        <attr name="centerBodyLineWidth" format="dimension" />
        <attr name="centerBodyLineHeight" format="dimension" />
        <attr name="centerBodyLineArc" format="dimension" />

        <attr name="powerColor" format="color" />
        <attr name="powerRectArc" format="dimension" />
        <attr name="powerMarginTop" format="dimension" />
    </declare-styleable>


    <declare-styleable name="BreatheView">
        <attr name="insideViewWidth" format="dimension" /> <!--内部TextView的宽度-->
        <attr name="insideViewHeight" format="dimension" /> <!--内部TextView的高度-->

        <attr name="lightDiffusionWidth" format="dimension" /> <!--光扩散的间距-->

        <attr name="BreatheViewTextSize" format="dimension" />  <!--设置文字的大小-->
        <attr name="BreatheViewTextColor" format="color" />  <!--设置文字的颜色-->
        <attr name="BreatheViewText" format="string" /> <!--控件的文字-->

        <attr name="BreatheViewInsideColor" format="color" />  <!--设置内部View的颜色-->

        <attr name="BreatheViewIsLight" format="boolean" /> <!--设置控件是否扩散-->

    </declare-styleable>


    <declare-styleable name="BreatheView2">
        <attr name="incolor" format="color" /><!--背景圆形的颜色-->
        <attr name="distance2singleline" format="dimension" /><!--距离边线的距离-->
        <attr name="intext" format="string" /><!--文字-->
        <attr name="intextSize" format="dimension" /><!--内部文字大小-->
        <attr name="shadowcolor" format="color"/>
    </declare-styleable>

</resources>