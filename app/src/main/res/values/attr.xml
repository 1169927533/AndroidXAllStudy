<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="countdownview">
        <attr name="radius" format="dimension" />
        <attr name="paintWidth" format="dimension" />
        <attr name="paintColor" format="color" />

        <attr name="testIn" format="string" />
        <attr name="testTimeSize" format="dimension" />
        <attr name="testSize" format="dimension" />
        <attr name="paintInColor" format="color" />
        <attr name="testInColor" format="color" />
    </declare-styleable>


    <!--底部导航栏-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>
    <!--顶部菜单栏-->
    <declare-styleable name="customTab">
        <attr name="hasBottomLine" format="boolean" />
        <attr name="average" format="boolean" />
        <attr name="itemmarginright" format="dimension" />

        <attr name="bottomlinewidth" format="dimension" />
        <attr name="bottomlineheight" format="dimension" />
        <attr name="bottomlinecolor" format="reference" />
    </declare-styleable>


    <!--电池-->
    <declare-styleable name="batteryView">
        <attr name="batteryTopColor" format="color"/>
        <attr name="batteryTopWidth" format="dimension"/>
        <attr name="batteryTopLineWidth" format="dimension"/>
        <attr name="batteryTopLineHeight" format="dimension"/>
        <attr name="batteryTopLineArc" format="dimension"/>
    </declare-styleable>
</resources>