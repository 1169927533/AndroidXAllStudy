<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <com.example.a11699.androidxallstudy.myseekbar.IndicatorSeekBar
            android:id="@+id/beauty_item_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beauty_item_seekbar">
            <!-- android:layoutAnimation="@anim/layoutanimal_me"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请求权限" />

                <Button
                    android:id="@+id/btn_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="webview" />

                <Button
                    android:id="@+id/btn_oss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="oss对象存储" />

                <Button
                    android:id="@+id/btn_greendao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="数据库学习" />

                <Button
                    android:id="@+id/btn_barrage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="弹幕" />

                <Button
                    android:id="@+id/btn_bottomtab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义底部导航栏" />

                <Button
                    android:id="@+id/btn_imgpicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片选择" />

                <Button
                    android:id="@+id/btn_qqstep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="仿QQ步数" />


                <com.example.a11699.androidxallstudy.customview.FollowFingerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <com.example.a11699.androidxallstudy.customview.JellyTextView
                    android:id="@+id/btn_viewdrager"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="神奇的ViewDragHelper" />

                <Button
                    android:id="@+id/btn_myviewmodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义viewmodel" />

                <Button
                    android:id="@+id/btn_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JepPAck_Navigation学习" />

                <Button
                    android:id="@+id/btn_network"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="网络请求" />

                <Button
                    android:id="@+id/btn_sendgift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="送礼联机控件" />

                <Button
                    android:id="@+id/btn_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义下拉" />

                <Button
                    android:id="@+id/btn_soul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="仿soul  和  支持多指作画" />

                <Button
                    android:id="@+id/btn_live"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="直播间" />

                <Button
                    android:id="@+id/btn_danmu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="票屏弹幕" />

                <Button
                    android:id="@+id/btn_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义Tab" />

                <Button
                    android:id="@+id/btn_wubaloading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义五八同城加载动画" />

                <Button
                    android:id="@+id/btn_smartrecycleview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="下拉刷新" />

                <Button
                    android:id="@+id/btn_custompassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义密码输入框" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginRight="-65dp"
        android:background="#fff"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/lvListViewRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="sa" />

        <TextView
            android:id="@+id/lvListViewsss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="dsadsadsadsadsadsadsa" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>