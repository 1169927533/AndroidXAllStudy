<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <com.example.a11699.androidxallstudy.weibo.TopicTextView
        android:id="@+id/tv_result1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="0.3dp"

        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ed"
        app:layout_constraintLeft_toLeftOf="@+id/ed"
        app:layout_constraintRight_toRightOf="@+id/ed"
        app:layout_constraintTop_toTopOf="@+id/ed"
        app:linkHighlightColor="#ff6455" />

    <EditText
        android:id="@+id/ed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"

        android:textColor="@color/transparent"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.a11699.androidxallstudy.weibo.TopicTextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:layout_marginTop="308dp"
        android:gravity="left|top"
        android:maxLength="500"
        android:maxLines="10"
        android:singleLine="false"
        android:textSize="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed"
        app:linkHighlightColor="#ff6455" />


</androidx.constraintlayout.widget.ConstraintLayout>