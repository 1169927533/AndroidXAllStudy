<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar.crow.chat" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="colorPrimary">@color/whitte</item>
        <item name="android:windowBackground">@color/whitte</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/whitte</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/black</item>

        <item name="android:windowNoTitle">true</item>
    </style>
</resources>